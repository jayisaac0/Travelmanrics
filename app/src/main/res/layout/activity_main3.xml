<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:orientation="vertical" >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#058177">
        <ImageButton
            android:id="@+id/headBackLink"
            android:onClick="backHomeClick"
            android:background="@null"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travelmantics"
            android:textSize="20sp" android:textColor="#fff"/>

        <ImageButton
            android:id="@+id/buttonDet"
            android:onClick="backHomeClick"
            android:background="@null"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"/>

        <Button
            android:id="@+id/saveProductButton"
            android:onClick="saveProductClick"
            android:layout_height="20dp"
            android:text="SAVE"
            android:layout_width="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"/>


    </androidx.appcompat.widget.Toolbar>
    <GridLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/productName"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:text="First &amp; last  name"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/productPrice"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:text="First &amp; last  name"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/productDetails"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:text="First &amp; last  name"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="249dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_launcher_background" />


    </GridLayout>
</LinearLayout>